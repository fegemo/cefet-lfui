// Import CSS from "node_modules" and "bower_components"
// thanks to Stylus' "import css" and "paths" options
@import 'bespoke-markdown/node_modules/highlight.js/styles/monokai_sublime.css'


/// Tutorial
$tutorial-right = 20px
.tutorial
  position absolute
  right $tutorial-right
  bottom 80px
  padding .5em .75em
  border-radius 20px
  background-color rgba(255, 255, 255, .7)
  font-family 'Cookie', cursive
  font-size 2em
  transition opacity 300ms ease-out
  opacity 0
  &.tutorial-on
    opacity 1
    animation bounce 1s ease-out 0s infinite alternate

@keyframes bounce
  from
    right: $tutorial-right;

  to
    right: $tutorial-right * 2;



for num in (2..5)
  .multi-column-list-{num}
    column-count num


.texto-binario
  animation shine 1s ease-out 0s 1 normal
.texto-normal
  animation shine2 1s ease-out 0s 1 normal

@keyframes shine
  from
    opacity .25
  to
    opacity 1

@keyframes shine2
  from
    opacity .25
  to
    opacity 1

table
  max-width 760px
  text-align center

td:not(:last-child), th:not(:last-child)
  border-right 1px solid rgba(0,0,0,.2)

td
  padding 3px

th
  padding 3px

tr
  border 1px solid rgba(0,0,0,.4)

tr:nth-of-type(2n) > td
  background-color rgba(255,255,255,.4)

thead > tr
  background-color #555
  color white


//-------------------
// stoppable gifs
.stoppable-gif
  cursor pointer

//--------------------
// utilities
img[alt^="right"]
  float right

img[alt^="left"]
  float left


// backdrop slides
.detour.bespoke-backdrop-active
  background-image url(../images/desvio-faded.jpg)
  background-size cover
  width 100%
  height 100%

.bespoke-slide[data-bespoke-backdrop="detour"]
  background-color rgba(255,255,255,.6)
  border-radius 8px